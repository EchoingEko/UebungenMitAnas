<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Benutzer Tabelle</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
</head>
<body>

<div class="container my-5">
    <div id="auth-links" class="d-flex justify-content-between align-items-center mb-4">
        <h1>Willkommen, <%= user.username %>!</h1>
        <div>
            <a href="/addUser" class="btn btn-primary me-2">Add User</a>
            <a href="./logout" class="btn btn-outline-danger">Logout</a>
        </div>
    </div>

    <table id="userTable" class="display table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th> 
                <th>Hashed Password</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                    <td><a href="/edit/<%= user._id %>" target="_blank"><%= user._id %></a></td>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td> 
                    <td><%= user.password %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function() {
        $('#userTable').DataTable();
    });
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
